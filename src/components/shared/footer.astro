---
import { Navigation, Social, otherLinks } from "~/lib/constants/config";
import Hashtag from "~/assets/svgs/hashtag.astro";
import Icon from "../bases/icon.astro";
---

<footer class="footer border-t border-base-content py-6">
  <div class="container">
    <div class="flex flex-col gap-4">
      <aside class="flex items-center gap-2">
        <Hashtag/>
        <p>
          <strong class="text-lg"> Growth_ </strong>
          <br />
          A blog dedicated to growth marketing, for free for you. Made by love by <a
            class="underline"
            href="https://ryanrushlow.netlify.app"
            target="_blank">Rushlow Labs</a
          >.
        </p>
      </aside>
      <nav
        class="flex flex-col gap-4 lg:flex-row lg:flex-wrap text-base lg:text-sm font-semibold"
      >
        <a href="/" class="link link-hover">Home</a>
        <a href="/articles" class="link link-hover">Articles</a>
        {
          Navigation.map(({ href, text }) => (
            <a href={href} class="link link-hover">
              {text}
            </a>
          ))
        }
      </nav>
    </div>
    <div class="divider w-full h-1"></div>
    <div class="flex flex-col gap-4">
      <nav class="">
        <div class="flex gap-4">
          <p class="font-bold">Social Media:</p>
          <ul class="flex flex-wrap gap-4">
            {
              Social.map(({ href, icon, text }) => (
                <li>
                  <a href={href} class="link link-hover" target="_blank" title={text} aria-label={text}>
                    <Icon icon={icon} />
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </nav>
      <nav class="flex flex-wrap gap-4 text-xs mt-2">
        {
          otherLinks.map(({ href, text }) => (
            <a href={href} class="link link-hover">
              {text}
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</footer>
