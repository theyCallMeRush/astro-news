---
import Github from "~/assets/svgs/github.astro";
import Menu from "~/assets/svgs/menu.astro";
import { Navigation, otherLinks, Site } from "~/lib/constants/config";
import ThemeController from "../bases/theme-controller.astro";
---

<div class="navbar bg-base-100 border-b">
  <div class="navbar-start lg:w-1/2">
    <div class="dropdown">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle" aria-label="Menu">
        <Menu/>
      </div>

      <ul
        tabindex="0"
        class="menu dropdown-content z-50 bg-base-100 rounded-box w-56 shadow"
      >
        <li><a href="/">Home</a></li>
        <li><a href="/articles">Articles</a></li>

        <li>
          <details>
            <summary>Categories</summary>
            <ul>
              {
                Navigation.map(({ href, text }) => (
                  <li>
                    <a href={href}>{text}</a>
                  </li>
                ))
              }
            </ul>
          </details>
        </li>

        <li>
          <details>
            <summary>Other Pages</summary>
            <ul>
              {
                otherLinks.map(({ href, text }) => (
                  <li>
                    <a href={href}>{text}</a>
                  </li>
                ))
              }
            </ul>
          </details>
        </li>
      </ul>
    </div>
    <a class="text-xl px-2 text-nowrap lg:hidden" href="/">{Site.title}</a>
  </div>
  <div class="navbar-center hidden lg:flex">
    <a class="text-xl px-2" href="/">{Site.title}</a>
  </div>
  <div class="navbar-end">
    <ThemeController/>
    <a class="btn btn-ghost btn-circle" href={Site.github} target="_blank" aria-label="GitHub">
      <Github />
    </a>
  </div>
</div>
